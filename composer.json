{
    "name"              : "jbzoo/lang",
    "type"              : "library",
    "description"       : "Lightweight library for easy translation based on simple formats (php arrays, json, yml, ini)",
    "license"           : "MIT",
    "keywords"          : ["locale", "jbzoo", "lang", "language", "localisation", "translation"],
    "minimum-stability" : "stable",
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php"        : ">=5.4",
        "jbzoo/data" : "^1.3",
        "jbzoo/path" : "^1.0"
    },
    "require-dev"       : {
        "jbzoo/phpunit" : "^1.0"
    },
    "autoload"          : {
        "psr-4" : {
            "JBZoo\\Lang\\" : "src"
        }
    },
    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    },
    "config"            : {
        "optimize-autoloader" : true
    },
    "support"           : {
        "issues" : "https://github.com/JBZoo/Lang/issues"
    }
}
